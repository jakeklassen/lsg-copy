{
  "plugins": ["prettier"],
  "extends": ["airbnb-base", "prettier"],
  "env": {
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "no-console": "off"
  }
}
